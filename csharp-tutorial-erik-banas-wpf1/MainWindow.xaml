    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Row="0" Grid.ColumnSpan="4"
                 TextWrapping="Wrap"
                 Text="TextBox"/>
        <Button Content="7" HorizontalAlignment="Left"
                Grid.Row="1"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="8" HorizontalAlignment="Left"
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="9" HorizontalAlignment="Left"
                Grid.Row="1"
                Grid.Column="2"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="+" HorizontalAlignment="Left"
                Grid.Row="1"
                Grid.Column="3"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
         <!--second colum-->
        <Button Content="4" HorizontalAlignment="Left"
                Grid.Row="2"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="5" HorizontalAlignment="Left"
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="6" HorizontalAlignment="Left"
                Grid.Row="2"
                Grid.Column="2"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="-" HorizontalAlignment="Left"
                Grid.Row="2"
                Grid.Column="3"
                VerticalAlignment="Top"
                Width="130" Height="50"/>

        <Button Content="1" HorizontalAlignment="Left"
                Grid.Row="3"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="2" HorizontalAlignment="Left"
                Grid.Row="3"
                Grid.Column="1"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="3" HorizontalAlignment="Left"
                Grid.Row="3"
                Grid.Column="2"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="*" HorizontalAlignment="Left"
                Grid.Row="3"
                Grid.Column="3"
                VerticalAlignment="Top"
                Width="130" Height="50"/>

        <Button Content="C" HorizontalAlignment="Left"
                Grid.Row="4"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="0" HorizontalAlignment="Left"
                Grid.Row="4"
                Grid.Column="1"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="=" HorizontalAlignment="Left"
                Grid.Row="4"
                Grid.Column="2"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
        <Button Content="/" HorizontalAlignment="Left"
                Grid.Row="4"
                Grid.Column="3"
                VerticalAlignment="Top"
                Width="130" Height="50"/>
    </Grid>
</Window>
